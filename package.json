{
    "name": "ts-bazel-plugin",
    "version": "0.1.0",
    "description": "TypeScript language service plugin for working with Bazel",
    "author": "Walker Burgin <walkerburgin@gmail.com>",
    "license": "ISC",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "run-s clean build:ts",
        "build:ts": "tsc -p tsconfig.json",
        "clean": "rimraf dist",
        "lint": "run-s prettier",
        "lint:fix": "run-s prettier:fix",
        "prepare": "run-s build lint",
        "prettier": "prettier . --check",
        "prettier:fix": "prettier . --write"
    },
    "devDependencies": {
        "@types/node": "^20.14.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.3.0",
        "rimraf": "^5.0.7",
        "typescript": "^5.4.5"
    },
    "peerDependencies": {
        "typescript": "^5.4.5"
    },
    "packageManager": "pnpm@9.1.4",
    "files": [
        "dist"
    ]
}
